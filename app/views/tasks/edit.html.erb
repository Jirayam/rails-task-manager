<div class="container">
  <h1>Edit your task here</h1>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="form-group">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
